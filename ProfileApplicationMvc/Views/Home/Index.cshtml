@model ProfileApplicationMvc.Models.Homemodelcs
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width" />


    <title>Index</title>
</head>
<body>
    @Html.ActionLink("SHOW", "Index", "Show")<br />
    @Html.ActionLink("SEARCH BY ID", "Index", "SearchID")<br />
    @Html.ActionLink("Image Upload", "Index", "UploadPic")<br />
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="container">
            <div class="form-group">
                <label> Enter Employee Id : </label>
                @Html.TextBoxFor(M => M.emp.empid, new { @id = "Txtide", @class = "form-control", @placeholder = "Your Id" })

            </div>
            <div class="form-group">
                <label> Enter Employee Name : </label>
                @Html.TextBoxFor(M => M.emp.Name, new { @id = "Txtname", @class = "form-control", @placeholder = "Your Name" })

            </div>
            <div class="form-group">
                <label> Enter Employee Address : </label>
                @Html.TextBoxFor(M => M.emp.Addr, new { @id = "Txtaddr", @class = "form-control", @placeholder = "Your Address" })

            </div>
            <div class="form-group">
                <label> Enter Employee Contact No : </label>
                @Html.TextBoxFor(M => M.emp.phno, new { @id = "Txtph", @class = "form-control", @placeholder = "Your Phone No" })

            </div>
            <div class="form-group">
                <label> Enter Employee Salary : </label>
                @Html.TextBoxFor(M => M.emp.Sal, new { @id = "Txtsal", @class = "form-control", @placeholder = "Your Salary" })

            </div>
            <div class="form-group">
                <label> Enter Employee City : </label>
                @Html.TextBoxFor(M => M.emp.City, new { @id = "Txtcity", @class = "form-control", @placeholder = "Your City" })

            </div>

            <div class="form-group">
                <label> Enter Employee Gender: </label>
                @Html.TextBoxFor(M => M.emp.Gen, new { @id = "Txtgen", @class = "form-control", @placeholder = "Your Gender" })

            </div>

            <div class="form-group">
                <label> Enter Employee Department : </label>
                @Html.TextBoxFor(M => M.emp.Dep, new { @id = "Txtdep", @class = "form-control", @placeholder = "Your department" })

            </div>

            <div class="form-group">
                <label> Enter Employee Company : </label>
                @Html.TextBoxFor(M => M.emp.Comp, new { @id = "Txtcmp", @class = "form-control", @placeholder = "Your Company" })

            </div>

            <div class="form-group">
                <button type="submit" id="Btnsave" class="btn btn-primary">Submit</button>
                <label id="lblmsg">@ViewBag.view</label>

            </div>
        </div>
    }
</body>
</html>
